{
  "name": "shopify-collection-strategy",
  "version": "1.0.0",
  "description": "Shopify Collection Strategy and Menu Creation Tool",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test-api": "node test-api.js",
    "start": "node index.js",
    "bot": "node src/collection-strategy-bot.js",
    "bot:execute": "node src/collection-strategy-bot.js --execute",
    "analyze": "node src/collection-strategy-bot.js --skip-collections --skip-menus",
    "menu:analyze": "node src/menu-fixer.js",
    "menu:fix": "node src/menu-fixer.js --execute",
    "menu:auto": "node src/auto-menu-setup.js",
    "menu:auto:execute": "node src/auto-menu-setup.js --execute",
    "cleanup": "node src/collection-cleanup.js",
    "cleanup:report": "node src/collection-cleanup.js --report",
    "cleanup:fix": "node src/collection-cleanup.js --execute --fix-collections",
    "cleanup:delete": "node src/collection-cleanup.js --execute --delete-collections",
    "cleanup:tags": "node src/collection-cleanup.js --execute --fix-tags",
    "cleanup:all": "node src/collection-cleanup.js --execute --fix-collections --delete-collections --fix-tags",
    "cleanup:validate": "node src/collection-cleanup.js --report --validate",
    "validate": "node src/metadata-validator.js",
    "validate:fix": "node src/metadata-validator.js --fix",
    "validate:execute": "node src/metadata-validator.js --fix --execute",
    "validate:json": "node src/metadata-validator.js --json",
    "costs": "node src/update-product-costs.js",
    "costs:execute": "node src/update-product-costs.js --execute",
    "import": "python3 tools/pdf_product_importer.py --dry-run",
    "import:execute": "python3 tools/pdf_product_importer.py --execute",
    "import:publish": "python3 tools/pdf_product_importer.py --execute --publish",
    "import:list": "python3 tools/pdf_product_importer.py --list",
    "restock": "node src/restock-sold-out.js",
    "restock:execute": "node src/restock-sold-out.js --execute",
    "dedup": "node src/fix-duplicate-listings.js",
    "dedup:execute": "node src/fix-duplicate-listings.js --execute",
    "redirects": "node src/fix-redirects.js",
    "redirects:execute": "node src/fix-redirects.js --execute",
    "redirects:audit": "node src/fix-redirects.js --audit"
  },
  "dependencies": {
    "@shopify/shopify-api": "^9.0.0",
    "dotenv": "^16.3.1",
    "xlsx": "^0.18.5"
  },
  "keywords": [
    "shopify",
    "collections",
    "menu",
    "navigation"
  ],
  "author": "",
  "license": "MIT"
}
